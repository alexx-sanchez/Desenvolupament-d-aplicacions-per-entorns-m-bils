<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Gestió de Jocs</title>
    <link rel="stylesheet" type="text/css" href="/styles.css">
</head>

<body>
    <header>
        <h1>Gestió de Jocs per <%= user.name %>!</h1>
        <a href="/" class="back-button">Home</a>
    </header>

    <main>
        <section>
            <h2>Llista de Jocs</h2>
            <ul class="item-list">
                <% data.games.forEach(game => { %>
                    <li class="item">
                        <a href="/games/<%= game.id %>" class="item-link">
                            <img src="<%= game.photo %>" alt="<%= game.name %>" class="photo">
                            <strong><%= game.name %></strong>
                            <span>Categoria: <%= game.category %></span>
                            <span>Preu: <%= game.price %> €</span>
                        </a>
                    </li>
                <% }) %>
            </ul>
        </section>
    </main>
</body>

</html>
